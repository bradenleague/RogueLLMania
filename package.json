{
  "name": "roguellmania",
  "version": "0.1.0",
  "description": "RogueLLMania â€“ a minimal roguelike built with Electron and rot.js",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:unsigned": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "dist": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl",
    "clean": "rm -rf dist/*"
  },
  "keywords": [
    "roguelike",
    "game",
    "electron",
    "rot.js"
  ],
  "author": "Braden League",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^2.1.8"
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "rot-js": "^2.2.0"
  },
  "build": {
    "appId": "com.bradenleague.roguellmania",
    "productName": "RogueLLMania",
    "asar": true,
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "public/**/*",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.games",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    }
  }
}
